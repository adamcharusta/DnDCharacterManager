@page "/counter"
@using DnDCharacterManager.Contracts.Notifications
@rendermode InteractiveServer
@inject IMessageBus bus

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="IncrementCount">Click me</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="SendEmail">Send Email</MudButton>

@code {
    private int currentCount;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async Task SendEmail()
    {
        await bus.SendAsync(new SendEmail(
            "test@test.com",
            "Welcome",
            "Hello from Wolverine"
        ));
    }

}