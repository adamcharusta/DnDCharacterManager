<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">My Application</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Secondary Text</MudText>
        <MudDivider Class="my-2"/>
        <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
        <MudNavLink Href="/counter">Counter</MudNavLink>
        <MudNavGroup Title="Weather" Expanded="true">
            <MudNavLink Href="/weather">Weather</MudNavLink>
            <MudNavLink Href="/weather-per-days">Weather per days</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Auth" Expanded="true">
            <AuthorizeView>
                <Authorized>
                    <form method="post"
                          action="/auth/logout"
                          data-enhance="false"
                          style="display:inline">
                        <AntiforgeryToken/>
                        <button type="submit" class="mud-button-root mud-button mud-button-filled">
                            Wyloguj
                        </button>
                    </form>
                </Authorized>

                <NotAuthorized>
                    <MudNavLink Href="/account/login">Login</MudNavLink>
                </NotAuthorized>
            </AuthorizeView>
            <MudNavLink Href="/account/register">Register</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudPaper>
